@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h3 class="display-4 text-success text-center">QUẢN LÝ THỂ LOẠI SÁCH</h3>
<a href="javascript:;" onclick="category.openModal()" class="btn btn-primary" style="width: auto;">+ Thêm Thể loại</a>
<hr />
<div class="my-2">
    <table id="tbCategory" class="table table-bordered table-hover table-primary">
        <thead class="thead-dark">
            <tr class="text-center">
                <th>#ID</th>
                <th>Tên Danh Mục</th>
                <th>Ngày tạo</th>
                <th>Người tạo</th>
                <th>Ngày cập nhật</th>
                <th>Người cập nhật</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>

<!-- The Modal -->
<div class="modal" id="addEditCategoryModal">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title"></h4>
                <h4 class="modal-title text-primary" id="modalCategoryTitle"></h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <form id="fromAddEditCategory">
                    <input hidden name="CategoryId" id="CategoryId" value="0" />
                    <div class="row form-group">
                        <label for="CategoryName" class="col-2">Thể loại:</label>
                        <div class="col-10">
                            <input type="text" class="form-control" placeholder="Tên Thể loại sách"
                                   id="CategoryName" name="CategoryName"
                                   data-rule-required="true"
                                   data-msg-required="Xin nhập tên danh mục sách">
                        </div>
                    </div>
                </form>

            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <div class="col-12">
                    <h5 class="alert alert-danger text-break text-center" id="msgResult"></h5>
                </div>
                <a href="javascript:;" class="btn btn-success" onclick="category.save()">Lưu</a>
                <button type="button" class="btn btn-danger" data-dismiss="modal" id="closeModal">Hủy</button>
            </div>

        </div>
    </div>
</div>

@section Scripts{
    <script src="~/lib/bootbox.js/bootbox.min.js"></script>
    <script src="~/js/category.js" asp-append-version="true"></script>
}
