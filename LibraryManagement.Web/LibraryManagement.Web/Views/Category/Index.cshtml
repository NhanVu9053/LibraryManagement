@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<a href="javascript:void(0);" class="btn btn-info" onclick="category.openModal()">Create</a>
<div class="text-center my-2">
    <table id="tbCategory" class="table table-bordered mt-2">
        <thead class="thead-dark">
            <tr>
                <th>#ID</th>
                <th>Tên Danh Mục</th>
                <th>Ngày tạo</th>
                <th>Người tạo</th>
                <th>Trạng thái</th>
                <th>Ngày sửa</th>
                <th>Người sửa</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>

<!-- The Modal -->
<div class="modal" id="addEditCategoryModal">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title"></h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <h4 class="text-danger" id="msg" style="display: none"></h4>
                <form id="fromAddEditCategory">
                    <input hidden name="CategoryId" id="CategoryId" value="0" />
                    <div class="row form-group">
                        <label for="CategoryName" class="col-3">Category name:</label>
                        <div class="col-9">
                            <input type="text" class="form-control" placeholder="category name"
                                   id="CategoryName" name="CategoryName"
                                   data-rule-required="true"
                                   data-msg-required="Xin nhập tên danh mục sách">
                        </div>
                    </div>
                    <div class="row form-group">
                        <label for="Status" class="col-3">Status:</label>
                        <div class="col-9">
                            <select class="form-control" id="Status" name="Status">
                            </select>
                        </div>
                    </div>
                </form>

            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <a href="javascript:;" class="btn btn-success" onclick="category.save()">Save</a>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>

        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/category.js" asp-append-version="true"></script>
}
