@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
    .img_book_details {
        width: 250px;
        height: 300px;
        border: 4px solid #1E90FF;
    }
</style>

<br />
<h3 class="display-4 text-success text-center">QUẢN LÝ KHO SÁCH</h3>
<hr />
<div class="my-2">
    <table id="tbBookArchive" class="table table-bordered table-hover table-primary">
        <thead class="thead-dark">
            <tr class="text-center ">
                <th>#ID</th>
                <th>Mã Sách</th>
                <th>Tên Sách</th>
                <th>Tổng SL</th>
                <th>Số lượng còn</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>

<!-- The Modal -->
<div class="modal" id="editBookArchiveModal">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title text-primary" id="modalBookArchiveTitle"></h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <h4 class="text-danger" id="msg" style="display: none"></h4>
                <form id="fromEditbookArchive">
                    <input hidden name="BookArchiveId" id="BookArchiveId" />
                    <input hidden name="IsPlus" id="IsPlus" />
                    <h5 class="text-warning" id="bookName"></h5>
                    <div class="row form-group">
                        <label for="Value" class="col-2">Giá trị:</label>
                        <div class="col-8">
                            <input type="number" class="form-control" placeholder="Số lượng"
                                   id="Value" name="Value"
                                   data-rule-required="true"
                                   data-msg-required="Bạn chưa nhập số lượng"
                                   data-rule-min="0"
                                   data-msg-min="Số lượng nhập vào phải lớn hơn 0"
                                   data-rule-number="true"
                                   data-msg-number="Số lượng nhập vào phải là số nguyên">
                        </div>
                    </div>
                </form>

            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <div class="col-12">
                    <h5 class="alert alert-danger text-break text-center" id="msgResult"></h5>
                </div>
                <a href="javascript:;" class="btn btn-success" onclick="bookArchive.save()">Cập nhật</a>
                <button type="button" class="btn btn-danger" id="closeModal" data-dismiss="modal">Hủy</button>
            </div>

        </div>
    </div>
</div>

@section Scripts{
    <script src="~/lib/bootbox.js/bootbox.min.js"></script>
    <script src="~/js/bookArchive.js" asp-append-version="true"></script>
}

