@model List<BookView>
@{
    ViewData["Title"] = "Book List";
}

<div class="text-left">
    <br />
    <h3 class="display-4 text-success text-center">QUẢN LÝ SÁCH</h3>
    @if (TempData["Message"] != null)
    {
        <p class="alert alert-default-success">@TempData["Message"]</p>
    }
    <a asp-controller="Book" asp-action="Create" class="btn btn-primary" style="width: auto;">+ Thêm sách mới</a>
    <hr />
    <table id="tbBooks" class="table table-bordered table-hover table-primary">
        <thead class="thead-dark">
            <tr>
                <th>#ID</th>
                <th>Tên sách</th>
                <th>Loại sách</th>
                <th>Ngày xuất bản</th>
                <th>Trạng thái</th>
                <th>Hình ảnh</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                if (book.StatusName != "Deleted")
                {
                    <tr>
                        <td>@book.BookId</td>
                        <td>@book.BookName</td>
                        <td>@book.CategoryName</td>
                        <td>@book.DopStr</td>
                        <td>@book.StatusName</td>
                        <td>
                            <img src="/img/@book.ImagePath" style="width: 60px; height: 70px;" />
                        </td>
                        <td>
                            <a asp-controller="Book" asp-action="Details" asp-route-id="@book.BookId" class="text-primary m-2" title="Chi tiết"><i class="fas fa-eye"></i></a>
                            <a asp-controller="Book" asp-action="Edit" asp-route-id="@book.BookId" class="text-warning m-2" title="Cập nhật"><i class="fas fa-edit"></i></a>
                            <a href="javascript:void(0)" class="text-danger m-2" onclick="books.delete(@book.BookId)" title="Xóa"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

@section Scripts{
    <script src="~/lib/bootbox.js/bootbox.min.js"></script>
    <script src="~/js/book.js" asp-append-version="true"></script>
}