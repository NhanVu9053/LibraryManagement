@using X.PagedList.Mvc.Core;
@using X.PagedList;
@model IPagedList<BookView>;
@{
    ViewData["Title"] = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var search = ViewBag.search;
}

<div class="ht__bradcaump__area" style=" background: rgba(0, 0, 0, 0) url(/Assets/tmart/images/bg/2.jpg) no-repeat scroll center center / cover;">
    <div class="ht__bradcaump__wrap">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="bradcaump__inner text-center">
                        <nav class="bradcaump-inner">
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<div id="searchsach" class="portfolio-grid-area bg__white pt--130 pb--100">
    <div class="container">
        <div class="portfolio-style">
            <div class="row grid" style="position: relative; height: 2040px;">
                @foreach (var book in Model)
                {
                    <div class="col-md-6 col-sm-6 col-xs-12 grid-item cat2 cat3 product_img" style="position: absolute; left: 0%; top: 0px;">
                        <div class="single-portfolio-card mb--30">
                            <div class="portfolio-img">
                                <a asp-controller="Home" asp-action="ViewProduct" asp-route-id="@book.BookId">

                                    <img src="~/img/@book.ImagePath">
                                </a>
                                <div>

                                    <a class="img-poppu" href="~/img/03db34cb-abfe-49f3-9e6a-2f8f8b204ba6_book2.png">
                                    </a>
                                </div>
                            </div>
                            <div class="portfolio-title portfolio-card-title text-center">
                                <h3><a asp-controller="Home" asp-action="ViewProduct" asp-route-id="@book.BookId">@book.BookName</a></h3>
                                <span class="product__span" style="text-align: center; font-size: 1.5em; margin-left: 20px">@book.StatusName</span>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>
<div>

    @Html.PagedListPager(Model, page => Url.Action($"Search", new { resultid = search, page = page }));
</div>

<style>
    .pagination {
        width: 100%;
        display: inline-flex;
    }

        .pagination > li {
            padding: 0px 0px !important;
            margin-right: 1px;
            border-radius: 5px;
        }
</style>


