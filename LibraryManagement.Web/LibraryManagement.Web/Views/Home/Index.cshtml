                    <div class="category-heading">
                        <h3> Danh Mục</h3>
                    </div>
                    <div class="category-menu-list">
                        <ul>
                            @{
                                foreach (var category in dataCategory)
                                {
                                    <li><a href="/Home/Category/@category.CategoryId"><img alt="" src="~/Assets/tmart/images/icons/thum10.png"> @category.CategoryName</a></li>

                                }
                            }
                        </ul>

                    </div>
                </div>
            </div>
            <!-- End Left Feature -->
